<!DOCTYPE html>
<html lang="en">
<body>
    {{#if hasError}}
    <div class="alert-danger">
        {{#each messages}}
            <p>{{this}}</p>
        {{/each}}
    </div>
    {{/if}}
    <section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('images/bg_3.jpg');" data-stellar-background-ratio="0.5">
      <div class="overlay"></div>
      <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
          <div class="col-md-9 ftco-animate pb-5">
          	<p class="breadcrumbs"><span class="mr-2"><a href="/">subadmin <i class="ion-ios-arrow-forward"></i></a></span> <span>add car <i class="ion-ios-arrow-forward"></i></span></p>
            <h1 class="mb-3 bread">Add Car</h1>
          </div>
        </div>
      </div>
    </section>

    <section class="ftco-section contact-section">
      <div class="container">
          <div class="col-md-8 block-9 mb-md-5">
              <form action="/admin/addCar" method="POST" enctype="multipart/form-data">
              <div class="form-group">
                <input type="text" name="model" class="form-control" placeholder="Car Model Name" required>
              </div>
              <div class="form-group">
                <input type="text" name="price" class="form-control" placeholder="Rate per Hour" required>
              </div>
              <div class="form-group">
                <input type="text" name="year" class="form-control" placeholder="Purchased year of car" required>
              </div>
              <div class="form-group">
                <input type="text" name="passingNumber" class="form-control" placeholder="Passing Number of car" required>
              </div>
              <div class="form-group">
                <input type="text" name="capacity" class="form-control" placeholder="Capacity of car" required>
              </div>
              <div class="form-group">
                <select name="fuelType" class="form-control" required><br>
                  <option value="Petrol">Petrol</option>
                  <option value="Diesel">Diesel</option>
                  <option value="Petrol+CNG">Petrol+CNG</option>
                  <option value="#" selected>Choose Fuel Type</option>
                </select>
              </div>
              <div class="form-group">
                <select name="carType" class="form-control" required><br>
                  <option value="Sedan">Sedan</option>
                  <option value="SUV">SUV</option>
                  <option value="Hatckbak">Hatckbak</option>
                  <option value="Sportz">Sportz</option>
                  <option value="#" selected>Choose Car Type</option>
                </select>
              </div>
              <div class="form-group">
                <select name="transmission" class="form-control" >
                  <option value="Auto">Auto</option>
                  <option value="Manual">Manual</option>
                  <option value="#" selected>Choose Transmission Type</option>
                </select>
              </div>
              <div class="form-group">
                <input type="file" name="image" class="form-control" accept="image/*" placeholder="Choose Car Image" required>
              </div>
              <div class="form-group">
                <input type="submit" value="Add Car" class="btn btn-primary py-3 px-5">
              </div>
            </form>
          </div>
      </div>
    </section>    
  </body>
</html>


