<!DOCTYPE html>
<html lang="en">

<body>
    <section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('/images/bg_3.jpg');" data-stellar-background-ratio="0.5">
      <div class="overlay"></div>
      <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
          <div class="col-md-9 ftco-animate pb-5">
          	<p class="breadcrumbs"><span class="mr-2"><a href="/">Home <i class="ion-ios-arrow-forward"></i></a></span> <span>Book car <i class="ion-ios-arrow-forward"></i></span></p>
            <h1 class="mb-3 bread">Book Car</h1>
          </div>
        </div>
      </div>
    </section>
    <section class="ftco-section contact-section">
      <div class="container">
          <div class="col-md-8 block-9 mb-md-5">
             <form action="/cars/bookingDetails" method="POST">
              <div class="form-group">
                <input type="date" id="txtdate" name="dateOfRental" class="form-control" placeholder="Date of Booking" min="2020-08-10" required>    
              </div>
              <div class="form-group">
                <input type="number" name="daysOfRental" class="form-control" min="1" placeholder="Days of Booking" required>               
              </div>
                <input type="hidden" name="carId" value="{{carId}}" >
              <div class="form-group">
                <input type="submit" value="PAY NOW" class="btn btn-primary py-3 px-5">
              </div>
            </form>
          </div>
      </div>
    </section>    
  </body>
</html>