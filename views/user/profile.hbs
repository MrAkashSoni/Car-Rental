<!DOCTYPE html>
<html lang="en">
<body>
    {{#if hasError}}
    <div class="alert-danger">
        {{#each messages}}
            <p>{{this}}</p>
        {{/each}}
    </div>
    {{/if}}
    <section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('/images/bg_3.jpg');" data-stellar-background-ratio="0.5">
      <div class="overlay"></div>
      <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
          <div class="col-md-9 ftco-animate pb-5">
          	<p class="breadcrumbs"><span class="mr-2"><a href="/">Home <i class="ion-ios-arrow-forward"></i></a></span> <span>My Profile <i class="ion-ios-arrow-forward"></i></span></p>
            <h1 class="mb-3 bread">My Profile</h1>
          </div>
        </div>
      </div>
    </section>
    {{#if loggedInUser}}

    <section class="ftco-section contact-section">
      <div class="container">
          <div class="col-md-8 block-9 mb-md-5">
            
              <form action="/user/editProfile" method="post">
              <div class="form-group">
                <input type="text" class="form-control"value="{{loggedInUser.email}}" name="email" placeholder="Your Email" readonly>
              </div>
              <div class="form-group">
                <input type="text" class="form-control" value="{{loggedInUser.firstName}}" name="firstName" placeholder="Your First Name">
              </div>
              <div class="form-group">
                <input type="text" class="form-control" value="{{loggedInUser.lastName}}" name="lastName" placeholder="Your Last Name">
              </div>
              <input type="hidden" name="_id" value="{{loggedInUser._id}}">
              <div class="form-group">
                <input type="submit" value="Update Profile" class="btn btn-primary py-3 px-5">
              </div>
                {{#if loggedInUser.googleID}}
                {{else}}
                    <a href="/user/changePassword">Change Password</a>
                {{/if}}
            </form>
          </div>
      </div>
    </section>    
    
    {{/if}}

  </body>
</html>

