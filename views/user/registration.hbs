<!DOCTYPE html>
<html lang="en">
<body>
    
    <section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('/images/bg_3.jpg');" data-stellar-background-ratio="0.5">
      <div class="overlay"></div>
      <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
          <div class="col-md-9 ftco-animate pb-5">
          	<p class="breadcrumbs"><span class="mr-2"><a href="/">Home <i class="ion-ios-arrow-forward"></i></a></span> <span>Registration <i class="ion-ios-arrow-forward"></i></span></p>
            <h1 class="mb-3 bread">Registration</h1>
          </div>
        </div>
      </div>
      {{#if errMsg}}
    <div class="alert-danger">
        <p>{{errMsg}}</p>
    </div>
    {{/if}}
    {{#if hasError}}
    <div class="alert-danger">
        {{#each messages}}
            <p>{{this}}</p>
        {{/each}}
    </div>
    {{/if}}
    </section>
    
    <section class="ftco-section contact-section">
      <div class="container">
          <div class="col-md-8 block-9 mb-md-5">
              <form action="/user/registration" method="post">
              <div class="form-group">
                <input type="text"  id="email" class="form-control" name="email" placeholder="Your Email" required>
              </div>
                {{#if isAdmin}}
                    <input type="hidden" name="isAdmin" value="true">
                {{else}}
                    <a href="/user/subAdmin-registration">Make Money From your ideal Car!</a></br>
                {{/if}}
              <div class="form-group">
                  <input type="submit" value="Verify Your Account" class="btn btn-primary py-3 px-5">
              </div>
            </form>
          </div>
      </div>
    </section>    
  </body>
</html>