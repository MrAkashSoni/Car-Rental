<!DOCTYPE html>
<html lang="en">
<body>
    {{#if hasError}}
    <div class="alert-danger">
        {{#each messages}}
            <p>{{this}}</p>
        {{/each}}
    </div>
    {{/if}}
    <section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('/images/bg_3.jpg');" data-stellar-background-ratio="0.5">
      <div class="overlay"></div>
      <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
          <div class="col-md-9 ftco-animate pb-5">
          	<p class="breadcrumbs"><span class="mr-2"><a href="/">sub admin <i class="ion-ios-arrow-forward"></i></a></span> <span>Car Detail <i class="ion-ios-arrow-forward"></i></span></p>
            <h1 class="mb-3 bread">Update Car Detail</h1>
          </div>
        </div>
      </div>
    </section>
    
    {{#if cartoUpdate}}
    <section class="ftco-section contact-section">
      <div class="container">
          <div class="col-md-8 block-9 mb-md-5">
            <legend>{{cartoUpdate.model}} | {{cartoUpdate.passingNumber}}</legend>
              <form action="/cars/editPrice" method="POST">
              <div class="form-group">
                <input type="text" class="form-control" value="{{cartoUpdate.price}}" name="price" placeholder="Rent per hour" >
              </div>
              <div class="form-group">
                <input  type="file" name="image" class="form-control" required accept="jpg/png/jpeg" >
              </div>
             
              <input type="hidden" name="_id" value="{{cartoUpdate._id}}">
              <input type="hidden" name="model" value="{{cartoUpdate.model}}">
              <div class="form-group">
                <input type="submit" value="Update Price" class="btn btn-primary py-3 px-5">
              </div>
            </form>
          </div>
      </div>
    </section>    
    {{/if}}
  </body>
</html>


