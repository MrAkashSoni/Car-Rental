<!DOCTYPE html>
<html lang="en">
<body>
    {{#if errMsg}}
    <div class="alert-danger">
        <p>{{errMsg}}</p>
    </div>
    {{/if}}
    <section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('/images/bg_3.jpg');" data-stellar-background-ratio="0.5">
      <div class="overlay"></div>
      <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
          <div class="col-md-9 ftco-animate pb-5">
          	<p class="breadcrumbs"><span class="mr-2"><a href="/">Home <i class="ion-ios-arrow-forward"></i></a></span> <span>Reset password <i class="ion-ios-arrow-forward"></i></span></p>
            <h1 class="mb-3 bread">Reset Password</h1>
          </div>
        </div>
      </div>
    </section>

    <section class="ftco-section contact-section">
      <div class="container">
          <div class="col-md-8 block-9 mb-md-5">
            <form action="/user/forgotPassword" method="POST">
              <div class="form-group">
                <input type="password" placeholder="Enter Password" name="password"  class="form-control" required>
              </div>
              <input type="hidden" name="randID" value="{{id}}">
              <div class="form-group">
                <input type="submit" value="Reset Password" class="btn btn-primary py-3 px-5">
              </div>
            </form>
          </div>
      </div>
    </section>    
  </body>
</html>

