<!DOCTYPE html>
<html lang="en">
<body>
    {{#if errMsg}}
    <div class="alert-danger">
        <p>{{errMsg}}</p>
    </div>
    {{/if}}
    <section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('/images/bg_3.jpg');" data-stellar-background-ratio="0.5">
      <div class="overlay"></div>
      <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
          <div class="col-md-9 ftco-animate pb-5">
          	<p class="breadcrumbs"><span class="mr-2"><a href="/">Home <i class="ion-ios-arrow-forward"></i></a></span> <span>My Profile> Change password <i class="ion-ios-arrow-forward"></i></span></p>
            <h1 class="mb-3 bread">Change Password</h1>
          </div>
        </div>
      </div>
    </section>

    <section class="ftco-section contact-section">
      <div class="container">
          <div class="col-md-8 block-9 mb-md-5">
              <form action="/user/changePassword" method="POST">
              <div class="form-group">
                <input type="text" class="form-control" id="curPassword" placeholder="Enter Your Current password" name="curPassword" required>
              </div>
              <div class="form-group">
                <input type="text" class="form-control" id="newPassword" placeholder="Enter Your New password" name="newPassword" required>
              </div>
              <div class="form-group">
                <input type="submit" value="Change Password" class="btn btn-primary py-3 px-5">
              </div>
            </form>
          </div>
      </div>
    </section>    
  </body>
</html>

